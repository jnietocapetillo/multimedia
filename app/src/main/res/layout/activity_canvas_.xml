<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".canvas_Activity">

    <TableLayout
        android:layout_width="70dp"
        android:layout_height="730dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="70dp"
            android:layout_height="110dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="70dp"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAzul"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/boton_azul" />

        </TableRow>

        <TableRow
            android:layout_width="70dp"
            android:layout_height="110dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="70dp"
            android:layout_height="110dp" >

            <Button
                android:id="@+id/buttonRojo"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/boton_rojo" />
        </TableRow>

        <TableRow
            android:layout_width="70dp"
            android:layout_height="110dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="70dp"
            android:layout_height="100dp">

            <Button
                android:id="@+id/buttonMostaza"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/boton_mostaza" />
        </TableRow>

        <TableRow
            android:layout_width="70dp"
            android:layout_height="110dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="70dp"
            android:layout_height="100dp">

            <Button
                android:id="@+id/buttonAgua"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/boton_agua" />
        </TableRow>

        <TableRow
            android:layout_width="70dp"
            android:layout_height="110dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="70dp"
            android:layout_height="100dp">

            <Button
                android:id="@+id/buttonVerde"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/boton_verde" />
        </TableRow>

        <TableRow
            android:layout_width="70dp"
            android:layout_height="110dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonNegro"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/boton_negro" />
        </TableRow>

        <TableRow
            android:layout_width="70dp"
            android:layout_height="110dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="70dp"
            android:layout_height="100dp">

            <Button
                android:id="@+id/buttonAmarillo"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:background="@drawable/boton_amarillo" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btGrosor1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/grosor1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btGrosor2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/grosor2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btGrosor3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/grosor3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btGrosor4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/grosor4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btGrosor5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="230dp"
        android:layout_marginLeft="230dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/grosor5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.example.multimedia.Lienzo_clase
        android:id="@+id/lienzo"
        android:layout_width="334dp"
        android:layout_height="647dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>